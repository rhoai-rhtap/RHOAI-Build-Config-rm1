{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["custom.regex"],
  "packageRules": [
    {
      "description": "Update image digest in csv-patch.yaml",
      "matchFileNames": ["^bundle/csv-patch\\.yaml$"],
      "matchPackageNames": ["registry.redhat.io/openshift4/ose-oauth-proxy"],
      "matchUpdateTypes": ["digest"],
      "pinDigests": true,
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^bundle/csv-patch\\.yaml$"],
      "matchStrings": [
        "\\s*(?<depName>registry.redhat.io/openshift4/ose-oauth-proxy)@sha256:(?<currentDigest>[a-f0-9]+)"
      ],
      "currentValueTemplate": "{{{currentDigest}}}",
      "autoReplaceStringTemplate": "{{{depName}}}@sha256:{{{newDigest}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["^bundle/csv-patch\\.yaml$"],
      "matchStrings": [
        "\\s*ose-oauth-proxy-image:\\s*(?<depName>registry.redhat.io/openshift4/ose-oauth-proxy)@sha256:[a-f0-9]+(?:\\s*#\\s*(?<currentVersion>[^\\s]+))?"
      ],
      "currentValueTemplate": "{{{currentVersion}}}",
      "autoReplaceStringTemplate": "ose-oauth-proxy-image: {{{depName}}}@sha256:{{{newDigest}}} # {{{newVersion}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "schedule": ["at any time"]
}
