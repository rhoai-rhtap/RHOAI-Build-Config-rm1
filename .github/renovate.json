{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["custom.regex"],
  "packageRules": [
    {
      "description": "Test ose-oauth-proxy image update",
      "matchFileNames": ["^bundle/csv-patch\\.yaml$"],
      "matchPackageNames": ["registry.redhat.io/openshift4/ose-oauth-proxy"],
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^bundle/csv-patch\\.yaml$"],
      "matchStrings": [
        "ose-oauth-proxy-image"
      ],
      "currentValueTemplate": "latest",
      "autoReplaceStringTemplate": "ose-oauth-proxy-image: test-image:test-tag@sha256:test-digest", 
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "schedule": ["at any time"]
}
